@page

@using Common.Utils;
@model WebSite.Areas.Admin.Pages.Account.CreateModel
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "افزودن کاربر";
}

@section styles
{
    <link href="~/Admin/assets/css/users/account-setting.css" rel="stylesheet" />
    <link href="~/Admin/plugins/dropify/dropify.min.css" rel="stylesheet" />
}



<div class="layout-px-spacing">
    <div class="account-settings-container layout-top-spacing">

        <div class="account-content">
            <div class="scrollspy-example" data-spy="scroll" data-target="#account-settings-scroll" data-offset="-100">
                <div class="row">
                    <div class="col-xl-12 col-lg-12 col-md-12 layout-spacing">
                        <form id="general-info" class="section general-info" asp-page="./Create" method="post" enctype="multipart/form-data">
                            <div class="info">
                                <h6 class="">افزودن کاربر</h6>
                                <div class="row">
                                    <div class="col-lg-11 mx-auto">
                                        <div class="row">
                                            <div class="col-xl-2 col-lg-12 col-md-4">
                                                <div class="upload mt-4 pr-md-4">
                                                    <div class="dropify-wrapper has-preview"><div class="dropify-message"><span class="file-icon"></span> <p>Click to Upload or Drag n Drop</p><p class="dropify-error">Ooops, something wrong appended.</p></div><div class="dropify-loader" style="display: none;"></div><div class="dropify-errors-container"><ul></ul></div><input type="file" asp-for="user.AvatarFile" id="input-file-max-fs" class="dropify"><button type="button" class="dropify-clear"><i class="flaticon-close-fill"></i></button><div class="dropify-preview" style="display: block;"><span class="dropify-render"><img src="@PathExtension.DefaultAvatar"></span><div class="dropify-infos"><div class="dropify-infos-inner"><p class="dropify-filename"><span class="file-icon"></span> <span class="dropify-filename-inner">200x200.jpg</span></p><p class="dropify-infos-message">Upload or Drag n Drop</p></div></div></div></div>
                                                    <p class="mt-2"><i class="flaticon-cloud-upload mr-1"></i> آپلود عکس</p>
                                                </div>
                                            </div>
                                            <div class="col-xl-10 col-lg-12 col-md-8 mt-md-0 mt-4">
                                                <div>
                                                    <div class="row">
                                                        <div class="col-sm-6">
                                                            <div class="form-group">
                                                                <label for="fullName">نام </label>
                                                                <input type="text" asp-for="user.FirstName" class="form-control mb-4" placeholder="نام ">
                                                                <span asp-validation-for="user.FirstName" class="text-danger"></span>
                                                            </div>
                                                        </div>
                                                        <div class="col-sm-6">
                                                            <div class="form-group">
                                                                <label for="fullName">نام خانوادگی </label>
                                                                <input type="text" asp-for="user.LastName" class="form-control mb-4" placeholder="نام خانوادگی ">
                                                                <span asp-validation-for="user.LastName" class="text-danger"></span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-sm-6">
                                                            <div class="form-group">
                                                                <label>موبایل </label>
                                                                <input type="text" asp-for="user.Mobile" class="form-control mb-4" placeholder="موبایل ">
                                                                <span asp-validation-for="user.Mobile" class="text-danger"></span>
                                                            </div>
                                                        </div>
                                                        <div class="col-sm-6">
                                                            <div class="form-group">
                                                                <label>ایمیل </label>
                                                                <input type="text" asp-for="user.Email" class="form-control mb-4" placeholder="ایمیل ">
                                                                <span asp-validation-for="user.Email" class="text-danger"></span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-sm-6">
                                                            <div class="form-group">
                                                                <label class="switch s-outline s-outline-success  mb-4 mr-2">
                                                                    شماره موبایل کاربر تایید شده باشد؟
                                                                    <input type="checkbox" asp-for="user.IsMobileActive" checked="">
                                                                    <span class="slider round"></span>
                                                                </label>
                                                            </div>
                                                        </div>
                                                        <div class="col-sm-6">
                                                            <div class="form-group">
                                                                <label class="switch s-outline s-outline-success  mb-4 mr-2">
                                                                    ایمیل کاربر تایید شده باشد؟
                                                                    <input type="checkbox" asp-for="user.IsEmailActive" checked="">
                                                                    <span class="slider round"></span>
                                                                </label>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-sm-12">
                                                            <div class="form-group">
                                                                <label>کلمه عبور </label>
                                                                <input type="text" asp-for="user.Password" class="form-control mb-4" placeholder="کلمه عبور ">
                                                                <span asp-validation-for="user.Password" class="text-danger"></span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-sm-12">
                                                            <div class="form-group">
                                                                <button class="btn btn-primary mt-3" type="submit">ایجاد</button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>

</div>
@section scripts
{
    <partial name="_ValidationScriptsPartial" />
    <script src="~/Admin/plugins/dropify/dropify.min.js"></script>
    <script src="~/Admin/plugins/blockui/jquery.blockUI.min.js"></script>
    <script src="~/Admin/assets/js/users/account-settings.js"></script>
}